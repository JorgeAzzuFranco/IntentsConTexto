<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jorgeazzufranco.intentscontexto.MainActivity">

    <TextView
        android:id="@+id/txtEnviarMsj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Mensaje"
        android:textSize="24sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtEjemplo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejemplo"
        android:layout_below="@+id/txtEnviarMsj"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtEjemplo"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_below="@+id/editMensaje"
        android:layout_centerHorizontal="true"
        android:onClick="enviarMensaje"
        />
</RelativeLayout>
